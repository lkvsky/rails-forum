<h1><%= @user.name %></h1>

<h2>Posts:</h2>
<div class="row">
  <div class="span8 offset2">
    <% @user.posts.reverse.each do |post| %>
      <div class="well">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <p>
        <% if post.text.length >= 140 %>
          <%= post.text[0..140] + '...' %>
        <% else %>
          <%= post.text %>
        <% end %>
        </p>
        <span class="timestamp"><%= time_ago_in_words(post.created_at) %> ago</span>
      </div>
    <% end %>
  </div>
</div>


