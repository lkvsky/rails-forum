<!DOCTYPE html>
<html>
<head>
  <title>Forumz</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <%= link_to 'Home', root_path, :class => "brand" %>
        <ul class="nav">
          <% if current_user %>
            <li><%= link_to 'Log Out', session_path, :method => :delete %></li>
            <li><%=link_to "Hello, #{current_user.name}", user_path(current_user) %></li>
          <% else %>
            <li><%= link_to 'Sign In', new_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <% if flash[:notice] %>
      <div class="alert"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>

  </div>
</body>
</html>
